<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonasmiciulis.quizprojektas.ResultActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/end_label"
        android:text="GAME OVER!"
        android:textSize="30sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Questions answered : "
        android:textSize="20sp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/current_score_label"
        android:text="5"
        android:textSize="40sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore_label"
        android:textColor="@color/black"
        android:text="Highest score : 10"
        android:textSize="20sp"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Back to Quiz menu"
        android:background="@drawable/quizbutton"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="mainMenu"
        android:textSize="18sp"
        android:layout_weight="0.09" />

</LinearLayout>
